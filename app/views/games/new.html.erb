<div class="card-container">
  <% @letters.split.each do |letter| %>
    <div class="card">
      <p class="card-content"><%= letter %></p>
    </div>
  <% end %>
</div>
<h2>Please enter the longest word you can find using the letters above:</h2>
<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" placeholder="Your guess...">
  <input type="hidden" name="letters" value="<%= @letters %>">
  <input type="submit" value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
